pkgname=nautilus-open-any-terminal
pkgver=0.2.15
pkgrel=2
pkgdesc="context-menu entry for opening other terminal in nautilus"
arch=(any)
url="https://github.com/Stunkymonkey/nautilus-open-any-terminal"
license=(GPL3)
depends=(python-nautilus)
makedepends=(git python-setuptools)
source=("https://github.com/Stunkymonkey/nautilus-open-any-terminal/archive/refs/tags/${pkgver}.zip")
sha512sums=('325b748120b1da6ac00c5e6d2dcc140e752f7c9267728039ba13de18ea4868cd5006ce4aa277e900ad8c2f7eca551dfeb8449e2f341a679dba29ac5c616e24eb')

build() {
  cd $pkgname-$pkgver
  python3 setup.py build
}

package() {
  cd $pkgname-$pkgver
  python3 setup.py install --root="$pkgdir" --optimize=1
}

